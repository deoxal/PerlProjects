#
# Dependencies:
#
#   libtfl-perl (>= 2020-01-11)
#------------------------------------------------------------------------------

use strict;
use warnings;
use autodie;
use TFL 'Err', 'YNInput';

my $CurVer = "2020-02-27";

my $File = '/usr/bin/firefox';
my $Theme = 'Adwaita';

sub Usage{
	print(qq{            @{[uc($TFL::PROGNAME)]} ($CurVer)
		            $TFL::AUTHOR

		            Psuedo-Fix colors in Firefox when using a dark GTK theme.

		SYNTAX:     $TFL::PROGNAME [OPTS]

		OPTS:       --help|-h|-?            - Display this help information.
		            --version|-v            - Output the version datestamp.
		            --theme|-t NAME         - Where NAME is the chosen theme.
		            --non-interactive|-N    - Execute non-interactively.

		NOTE:       The GTK theme $Theme, usually available by default, is
		            needed, unless another is specified.

		            This script will work globally, meaning ALL users, -
		            regardless of their chosen theme, will use the $Theme GTK
		            theme for their use of Firefox.

		CAUTION:    It's possible that changes to the below file would not be
		            desired, in which case it would have to be restored from a
		            backup, or Firefox would need to be reinstalled.

		            Using the non-interactive feature assumes yes.

		FILE:       $File
	} =~ tr/\t//dr);
}

my $NonInt = 'false';

while (defined($ARGV[0])){
	if ($ARGV[0] =~ '^(--help|-h|-\?)$'){
		Usage(); exit(0)
	}elsif ($ARGV[0] =~ '^(--version|-v)$'){
		print("$CurVer\n"); exit(0)
	}elsif ($ARGV[0] =~ '^(--non-interactive|-N)$'){
		$NonInt = 'true'
	}else{
		Err(1, "Incorrect option(s) specified.")
	}

	shift()
}

exit(1) unless YNInput("Make permanent changes to '$File'?");

Err(1, 'Root access is required.') unless $< == 0;
Err(1, "File '$File' not found.") unless -f $File;

open(my $FH, '+<', $File);

my @Data = <$FH>;

truncate($FH, 0);
seek($FH, 0, 0);

foreach (@Data){
	if (/^[[:space:]]+exec \$MOZ_LIBDIR\/\$MOZ_APP_NAME "\$@"$/){
		print($FH $_ =~ s/^([[:space:]]+)(.*)$/$1 GTK_Theme='$Theme' $2/r)
	}else{
		print($FH $_)
	}
}

close($FH);
