#------------------------------------------------------------------------------
# This is the bash completion script for `ubuchk`.
#------------------------------------------------------------------------------

_ubuchk(){
	while read; do
		if [[ $REPLY =~ ^[[:space:]]{2} ]]; then
			Option=${REPLY%% - *}
			for Arg in ${Option//,/}; {
				Args+="${Arg##[^-]*} "
			}
		fi
	done <<< "$(rmne -h)"

	COMPREPLY=(`compgen -W "$Args" -- "$2"`)

	unset Option Arg Args
}

complete -F _ubuchk ubuchk
