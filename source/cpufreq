#----------------------------------------------------------------------------------

use strict;
use warnings;
use autodie;
use TFL 'Err';

no warnings 'uninitialized';

my $CurVer = "2020-01-31";

my $ProcFile = '/proc/cpuinfo';

sub Usage{
	print(qq{            @{[uc($TFL::PROGNAME)]} ($CurVer)
		            $TFL::AUTHOR

		            Display the current CPU core frequencies.

		SYNTAX:     $TFL::PROGNAME [OPTS]

		OPTS:       --help|-h|-?            - Displays this help information.
		            --version|-v            - Output only the version datestamp.

		FILE:       $ProcFile
	} =~ tr/\t//dr)
}

while (defined($ARGV[0])){
	if ($ARGV[0] =~ '^(--help|-h|-\?)$'){
		Usage(); exit(0)
	}elsif ($ARGV[0] =~ '^(--version|-v)$'){
		print("$CurVer\n"); exit(0)
	}else{
		Err(1, "Incorrect option(s) specified")
	}

	shift()
}

Err(1, "File '$ProcFile' not found.") unless -f $ProcFile;
Err(1, "Read access for '$ProcFile' is denied.") unless -r $ProcFile;

open(my $FH, '<', $ProcFile);

my $CoreCount = 0;
while (<$FH>){
	chomp(my @CurLine = split(':', $_));
	next unless $CurLine[0] =~ '^cpu MHz';

	$CoreCount++;
	printf("CORE_%d: %.3f\n", $CoreCount, $CurLine[1] =~ s/\s//gr)
}

close($FH)
